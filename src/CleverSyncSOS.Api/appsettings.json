{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "CleverSyncSOS": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "AzureKeyVault": {
    "VaultUri": "https://cleversyncsos.vault.azure.net/"
  },
  "CleverAuth": {
    "KeyVaultUri": "https://cleversyncsos.vault.azure.net/",
    "ClientIdSecretName": "CleverSyncSOS--Clever--ClientId",
    "ClientSecretSecretName": "CleverSyncSOS--Clever--ClientSecret",
    "TokenEndpoint": "https://clever.com/oauth/tokens",
    "MaxRetryAttempts": 5,
    "InitialRetryDelaySeconds": 2,
    "TokenRefreshThresholdPercent": 75.0,
    "HttpTimeoutSeconds": 30
  },
  "CleverApi": {
    "BaseUrl": "https://api.clever.com/v3.0",
    "PageSize": 100,
    "MaxRetryAttempts": 5,
    "InitialRetryDelaySeconds": 2
  }
}
