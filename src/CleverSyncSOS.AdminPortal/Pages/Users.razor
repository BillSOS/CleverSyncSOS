@page "/users"
@attribute [Authorize(Policy = "SuperAdmin")]
@using CleverSyncSOS.Core.Database.SessionDb
@using CleverSyncSOS.Core.Database.SessionDb.Entities
@using Microsoft.EntityFrameworkCore
@inject SessionDbContext DbContext

<PageTitle>Users - CleverSync Admin</PageTitle>

<div class="container-fluid">
    <PageHeader Title="Users">
        <Actions>
            <button class="btn btn-primary" @onclick="RefreshUsers">
                <i class="oi oi-reload"></i> Refresh
            </button>
        </Actions>
    </PageHeader>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Filters</h5>
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="roleFilter" class="form-label">Role</label>
                    <select class="form-select" id="roleFilter" @bind="_roleFilter" @bind:after="ApplyFilters">
                        <option value="">All Roles</option>
                        <option value="SchoolAdmin">School Admin</option>
                        <option value="DistrictAdmin">District Admin</option>
                        <option value="SuperAdmin">Super Admin</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="statusFilter" class="form-label">Status</label>
                    <select class="form-select" id="statusFilter" @bind="_statusFilter" @bind:after="ApplyFilters">
                        <option value="">All</option>
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="authSourceFilter" class="form-label">Auth Source</label>
                    <select class="form-select" id="authSourceFilter" @bind="_authSourceFilter" @bind:after="ApplyFilters">
                        <option value="">All</option>
                        <option value="Clever">Clever</option>
                        <option value="Bypass">Bypass</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="searchFilter" class="form-label">Search</label>
                    <input type="text" class="form-control" id="searchFilter" placeholder="Email or name"
                           @bind="_searchFilter" @bind:after="ApplyFilters" />
                </div>
            </div>
        </div>
    </div>

    @if (_loading)
    {
        <LoadingSpinner DisplayMessage="Loading users..." />
    }
    else if (_error != null)
    {
        <ErrorAlert Title="Error" Message="@_error" />
        <button class="btn btn-sm btn-outline-danger" @onclick="LoadUsers">Try Again</button>
    }
    else if (_users == null || !_users.Any())
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No Users Found</h4>
            <p>No users match the current filters.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Role</th>
                        <th>Auth Source</th>
                        <th>School/District</th>
                        <th>Last Login</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in _users)
                    {
                        <tr>
                            <td>
                                <div>
                                    <strong>@user.DisplayName</strong>
                                </div>
                                <div class="small text-muted">@user.Email</div>
                            </td>
                            <td>
                                <span class="badge @GetRoleBadgeClass(user.Role)">
                                    @FormatRole(user.Role)
                                </span>
                            </td>
                            <td>
                                <span class="badge @(user.AuthenticationSource == "Clever" ? "bg-primary" : "bg-warning text-dark")">
                                    @user.AuthenticationSource
                                </span>
                            </td>
                            <td class="small">
                                @if (user.School != null)
                                {
                                    <div><i class="oi oi-building"></i> @user.School.Name</div>
                                }
                                @if (user.District != null)
                                {
                                    <div><i class="oi oi-globe"></i> @user.District.Name</div>
                                }
                                @if (user.School == null && user.District == null)
                                {
                                    <span class="text-muted">All access</span>
                                }
                            </td>
                            <td class="text-nowrap small text-muted">
                                @(user.LastLogin.HasValue ? FormatLocalTime(user.LastLogin.Value, user.School?.District?.LocalTimeZone ?? user.District?.LocalTimeZone, "g") : "Never")
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => ViewUserDetails(user.UserId)" title="View Details">
                                    <i class="oi oi-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => EditSessionLimit(user)" title="Edit Session Limit">
                                    <i class="oi oi-cog"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                Showing @_users.Count user@(_users.Count != 1 ? "s" : "")
            </p>
        </div>
    }
</div>

<!-- Session Limit Edit Modal -->
@if (_showEditModal && _editingUser != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Session Limit</h5>
                    <button type="button" class="btn-close" @onclick="CloseEditModal"></button>
                </div>
                <div class="modal-body">
                    <p><strong>@_editingUser.DisplayName</strong> (@_editingUser.Email)</p>
                    <p class="text-muted small">Role: @FormatRole(_editingUser.Role)</p>

                    <div class="mb-3">
                        <label for="maxSessions" class="form-label">Max Concurrent Sessions</label>
                        <input type="number" class="form-control" id="maxSessions"
                               @bind="_editMaxSessions" min="1" max="10"
                               placeholder="Leave blank for role default" />
                        <div class="form-text">
                            Leave blank to use role default (@GetRoleDefaultSessions(_editingUser.Role)).
                            Valid range: 1-10.
                        </div>
                    </div>

                    <div class="alert alert-info small">
                        <strong>Current effective limit:</strong> @GetEffectiveLimit(_editingUser)
                    </div>

                    @if (!string.IsNullOrEmpty(_editError))
                    {
                        <div class="alert alert-danger">@_editError</div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseEditModal">Cancel</button>
                    <button type="button" class="btn btn-warning" @onclick="ClearSessionLimit" disabled="@_saving">
                        Use Role Default
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="SaveSessionLimit" disabled="@_saving">
                        @if (_saving)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<User>? _users;
    private bool _loading = true;
    private string? _error;

    // Filters
    private string _roleFilter = "";
    private string _statusFilter = "";
    private string _authSourceFilter = "";
    private string _searchFilter = "";

    // Edit modal
    private bool _showEditModal = false;
    private User? _editingUser;
    private int? _editMaxSessions;
    private bool _saving = false;
    private string? _editError;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        _loading = true;
        _error = null;

        try
        {
            var query = DbContext.Users
                .Include(u => u.School)
                    .ThenInclude(s => s.District)
                .Include(u => u.District)
                .AsQueryable();

            // Apply filters
            if (!string.IsNullOrWhiteSpace(_roleFilter))
            {
                query = query.Where(u => u.Role == _roleFilter);
            }

            if (!string.IsNullOrWhiteSpace(_statusFilter))
            {
                var isActive = bool.Parse(_statusFilter);
                query = query.Where(u => u.IsActive == isActive);
            }

            if (!string.IsNullOrWhiteSpace(_authSourceFilter))
            {
                query = query.Where(u => u.AuthenticationSource == _authSourceFilter);
            }

            if (!string.IsNullOrWhiteSpace(_searchFilter))
            {
                var search = _searchFilter.ToLower();
                query = query.Where(u =>
                    u.Email.ToLower().Contains(search) ||
                    u.DisplayName.ToLower().Contains(search));
            }

            _users = await query
                .OrderBy(u => u.Role)
                .ThenBy(u => u.DisplayName)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            _error = $"Failed to load users: {ex.Message}";
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task ApplyFilters()
    {
        await LoadUsers();
    }

    private async Task RefreshUsers()
    {
        await LoadUsers();
    }

    private void ViewUserDetails(int userId)
    {
        // Placeholder for user details view
        Console.WriteLine($"View details for user {userId}");
    }

    private void EditSessionLimit(User user)
    {
        _editingUser = user;
        _editMaxSessions = user.MaxConcurrentSessions;
        _editError = null;
        _showEditModal = true;
    }

    private void CloseEditModal()
    {
        _showEditModal = false;
        _editingUser = null;
        _editMaxSessions = null;
        _editError = null;
    }

    private async Task SaveSessionLimit()
    {
        if (_editingUser == null) return;

        _saving = true;
        _editError = null;

        try
        {
            // Validate range
            if (_editMaxSessions.HasValue && (_editMaxSessions < 1 || _editMaxSessions > 10))
            {
                _editError = "Max concurrent sessions must be between 1 and 10.";
                return;
            }

            // Update the user
            var user = await DbContext.Users.FindAsync(_editingUser.UserId);
            if (user != null)
            {
                user.MaxConcurrentSessions = _editMaxSessions;
                user.UpdatedAt = DateTime.UtcNow;
                await DbContext.SaveChangesAsync();

                // Refresh the list
                await LoadUsers();
                CloseEditModal();
            }
        }
        catch (Exception ex)
        {
            _editError = $"Failed to save: {ex.Message}";
        }
        finally
        {
            _saving = false;
        }
    }

    private async Task ClearSessionLimit()
    {
        _editMaxSessions = null;
        await SaveSessionLimit();
    }

    private int GetRoleDefaultSessions(string role)
    {
        return role switch
        {
            "SuperAdmin" => 5,
            "DistrictAdmin" => 3,
            "SchoolAdmin" => 3,
            "Teacher" => 2,
            "Student" => 1,
            _ => 5
        };
    }

    private string GetEffectiveLimit(User user)
    {
        if (user.MaxConcurrentSessions.HasValue)
        {
            return $"{user.MaxConcurrentSessions} (user override)";
        }
        return $"{GetRoleDefaultSessions(user.Role)} (role default)";
    }

    private string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "SuperAdmin" => "bg-danger",
            "DistrictAdmin" => "bg-warning text-dark",
            "SchoolAdmin" => "bg-info",
            _ => "bg-secondary"
        };
    }

    private string FormatRole(string role)
    {
        return role switch
        {
            "SuperAdmin" => "Super Admin",
            "DistrictAdmin" => "District Admin",
            "SchoolAdmin" => "School Admin",
            _ => role
        };
    }

    private DateTime ConvertToLocalTime(DateTime utcTime, string? timeZoneId)
    {
        if (string.IsNullOrEmpty(timeZoneId))
        {
            timeZoneId = "Eastern Standard Time"; // Default to Eastern if not specified
        }

        try
        {
            var timeZone = TimeZoneInfo.FindSystemTimeZoneById(timeZoneId);
            return TimeZoneInfo.ConvertTimeFromUtc(utcTime, timeZone);
        }
        catch
        {
            // If timezone conversion fails, fall back to Eastern Standard Time
            var easternZone = TimeZoneInfo.FindSystemTimeZoneById("Eastern Standard Time");
            return TimeZoneInfo.ConvertTimeFromUtc(utcTime, easternZone);
        }
    }

    private string FormatLocalTime(DateTime utcTime, string? timeZoneId, string format = "g")
    {
        var localTime = ConvertToLocalTime(utcTime, timeZoneId);
        return localTime.ToString(format);
    }
}
