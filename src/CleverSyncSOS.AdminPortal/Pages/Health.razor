@page "/health"
@attribute [Authorize(Policy = "SuperAdmin")]
@using Microsoft.Extensions.Diagnostics.HealthChecks
@using CleverSyncSOS.Core.Database.SessionDb
@using Microsoft.EntityFrameworkCore
@inject HealthCheckService HealthCheckService
@inject IDbContextFactory<SessionDbContext> DbContextFactory
@inject ILogger<Health> Logger

<PageTitle>System Health - CleverSync Admin</PageTitle>

<div class="container-fluid">
    <PageHeader Title="System Health Status">
        <ChildContent>
            <a href="/help/troubleshooting" class="help-link ms-2"
               data-bs-toggle="tooltip" data-bs-placement="bottom"
               title="Get help with health checks, sync locks, and troubleshooting">
                <i class="oi oi-question-mark"></i>
            </a>
        </ChildContent>
        <Actions>
            <button class="btn btn-primary" @onclick="RefreshHealth">
                <i class="oi oi-reload"></i> Refresh
            </button>
        </Actions>
    </PageHeader>

    @if (_loading)
    {
        <LoadingSpinner DisplayMessage="Checking system health..." />
    }
    else if (_error != null)
    {
        <ErrorAlert Title="Error" Message="@_error" />
        <button class="btn btn-sm btn-outline-danger" @onclick="LoadHealth">Try Again</button>
    }
    else if (_healthReport != null)
    {
        <!-- Overall Status Card -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card border-@GetStatusColor(_healthReport.Status)">
                    <div class="card-header bg-@GetStatusColor(_healthReport.Status) bg-opacity-10">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <h3 class="mb-1">
                                    <span class="badge bg-@GetStatusColor(_healthReport.Status)">
                                        @_healthReport.Status
                                    </span>
                                </h3>
                                <p class="text-muted mb-0">
                                    Overall System Status
                                </p>
                            </div>
                            <button class="btn btn-sm btn-outline-secondary"
                                    @onclick="ToggleOverallDetails">
                                @if (_showOverallDetails)
                                {
                                    <i class="oi oi-chevron-top"></i>
                                    <span>Hide Details</span>
                                }
                                else
                                {
                                    <i class="oi oi-chevron-bottom"></i>
                                    <span>Show Details</span>
                                }
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <div>
                                <small class="text-muted">
                                    Last checked: @DateTime.Now.ToString("g")
                                </small>
                            </div>
                            <div class="text-end">
                                <small class="text-muted">
                                    Duration: @_healthReport.TotalDuration.TotalMilliseconds.ToString("F0")ms
                                </small>
                            </div>
                        </div>

                        @if (_showOverallDetails)
                        {
                            <hr />
                            <div class="mt-3">
                                <h6 class="mb-3">Health Checks Performed (@_healthReport.Entries.Count):</h6>
                                <div class="row">
                                    @foreach (var entry in _healthReport.Entries)
                                    {
                                        <div class="col-md-6 mb-2">
                                            <div class="d-flex align-items-center">
                                                <span class="badge bg-@GetStatusColor(entry.Value.Status) me-2">
                                                    @entry.Value.Status
                                                </span>
                                                <span>@entry.Key</span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(entry.Value.Description))
                                            {
                                                <small class="text-muted ms-4">@entry.Value.Description</small>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Health Check Details -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Health Check Details</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var entry in _healthReport.Entries)
                        {
                            <div class="card mb-3 border-@GetStatusColor(entry.Value.Status)">
                                <div class="card-header bg-@GetStatusColor(entry.Value.Status) bg-opacity-10">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">
                                            <span class="badge bg-@GetStatusColor(entry.Value.Status)">
                                                @entry.Value.Status
                                            </span>
                                            @entry.Key
                                        </h6>
                                        @if (entry.Value.Status != HealthStatus.Healthy)
                                        {
                                            <button class="btn btn-sm btn-outline-primary"
                                                    @onclick="() => ToggleDetails(entry.Key)">
                                                @if (_expandedChecks.Contains(entry.Key))
                                                {
                                                    <i class="oi oi-chevron-top"></i>
                                                    <span>Hide Details</span>
                                                }
                                                else
                                                {
                                                    <i class="oi oi-chevron-bottom"></i>
                                                    <span>Show Details</span>
                                                }
                                            </button>
                                        }
                                    </div>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(entry.Value.Description))
                                    {
                                        <p class="mb-2"><strong>Description:</strong> @entry.Value.Description</p>
                                    }
                                    <p class="mb-0 text-muted">
                                        <small>Duration: @entry.Value.Duration.TotalMilliseconds.ToString("F0")ms</small>
                                    </p>

                                    @if (entry.Value.Status != HealthStatus.Healthy && _expandedChecks.Contains(entry.Key))
                                    {
                                        <hr />
                                        @if (entry.Value.Exception != null)
                                        {
                                            <div class="alert alert-danger mt-2">
                                                <h6>Exception:</h6>
                                                <pre class="mb-0">@entry.Value.Exception.Message</pre>
                                            </div>
                                        }

                                        @if (entry.Value.Data != null && entry.Value.Data.Any())
                                        {
                                            <div class="mt-3">
                                                <h6>Additional Information:</h6>
                                                <table class="table table-sm table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>Property</th>
                                                            <th>Value</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var data in entry.Value.Data)
                                                        {
                                                            <tr>
                                                                <td><code>@data.Key</code></td>
                                                                <td>@FormatDataValue(data.Value)</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                    }
                                    else if (entry.Value.Status == HealthStatus.Healthy && entry.Value.Data != null && entry.Value.Data.Any())
                                    {
                                        <div class="mt-2">
                                            <button class="btn btn-sm btn-outline-secondary"
                                                    @onclick="() => ToggleDetails(entry.Key)">
                                                @if (_expandedChecks.Contains(entry.Key))
                                                {
                                                    <span>Hide Detailed Info</span>
                                                }
                                                else
                                                {
                                                    <span>Show Detailed Info</span>
                                                }
                                            </button>
                                        </div>

                                        @if (_expandedChecks.Contains(entry.Key))
                                        {
                                            <div class="mt-3">
                                                <table class="table table-sm table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>Property</th>
                                                            <th>Value</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var data in entry.Value.Data)
                                                        {
                                                            <tr>
                                                                <td><code>@data.Key</code></td>
                                                                <td>@FormatDataValue(data.Value)</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Sync Locks Section -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="oi oi-lock-locked me-2"></i>Sync Locks
                        </h5>
                        <div>
                            <button class="btn btn-sm btn-outline-primary me-2" @onclick="LoadSyncLocks">
                                <i class="oi oi-reload"></i> Refresh
                            </button>
                            @if (_syncLocks != null && _syncLocks.Any())
                            {
                                <button class="btn btn-sm btn-danger" @onclick="ShowClearLocksConfirmation">
                                    <i class="oi oi-trash"></i> Clear All Locks
                                </button>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        @if (_loadingLocks)
                        {
                            <div class="text-center py-3">
                                <div class="spinner-border spinner-border-sm text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <span class="ms-2">Loading sync locks...</span>
                            </div>
                        }
                        else if (_lockError != null)
                        {
                            <div class="alert alert-danger mb-0">@_lockError</div>
                        }
                        else if (_syncLocks == null || !_syncLocks.Any())
                        {
                            <div class="alert alert-success mb-0">
                                <i class="oi oi-check me-2"></i>No active sync locks. All sync operations are available.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning mb-3">
                                <strong>@_syncLocks.Count active lock(s) found.</strong>
                                These locks prevent concurrent sync operations.
                            </div>
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Scope</th>
                                        <th>Acquired By</th>
                                        <th>Initiated By</th>
                                        <th>Acquired At</th>
                                        <th>Expires At</th>
                                        <th>Machine</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var lockEntry in _syncLocks)
                                    {
                                        var isExpired = lockEntry.ExpiresAt <= DateTime.UtcNow;
                                        <tr class="@(isExpired ? "table-secondary" : "")">
                                            <td><code>@lockEntry.Scope</code></td>
                                            <td>@lockEntry.AcquiredBy</td>
                                            <td>@(lockEntry.InitiatedBy ?? "-")</td>
                                            <td>
                                                @lockEntry.AcquiredAt.ToString("g") UTC
                                                <br />
                                                <small class="text-muted">(@FormatDuration(DateTime.UtcNow - lockEntry.AcquiredAt) ago)</small>
                                            </td>
                                            <td>
                                                @if (isExpired)
                                                {
                                                    <span class="text-danger">Expired</span>
                                                }
                                                else
                                                {
                                                    @lockEntry.ExpiresAt.ToString("g")
                                                    <text> UTC</text>
                                                }
                                            </td>
                                            <td><small>@(lockEntry.MachineName ?? "-")</small></td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-danger"
                                                        @onclick="() => ClearSingleLock(lockEntry.Scope)">
                                                    Clear
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <div class="mt-3">
                                <h6>Side Effects of Clearing Locks:</h6>
                                <ul class="mb-0 text-muted">
                                    <li><strong>If a sync is actually running:</strong> The sync will continue but another sync could start concurrently, potentially causing data conflicts or duplicate processing.</li>
                                    <li><strong>If a sync crashed/failed:</strong> Safe to clear. The lock is orphaned and blocking new syncs unnecessarily.</li>
                                    <li><strong>Expired locks:</strong> These are already inactive and safe to clear (cleanup happens automatically).</li>
                                </ul>
                            </div>
                        }

                        @if (_showClearConfirmation)
                        {
                            <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title">Confirm Clear All Locks</h5>
                                            <button type="button" class="btn-close btn-close-white" @onclick="() => _showClearConfirmation = false"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to clear <strong>all @_syncLocks?.Count sync locks</strong>?</p>
                                            <div class="alert alert-warning">
                                                <strong>Warning:</strong> If a sync is currently running, this may cause data conflicts.
                                                Only clear locks if you're sure no sync operations are in progress.
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" @onclick="() => _showClearConfirmation = false">Cancel</button>
                                            <button type="button" class="btn btn-danger" @onclick="ClearAllLocks">
                                                <i class="oi oi-trash"></i> Clear All Locks
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private HealthReport? _healthReport;
    private bool _loading = true;
    private string? _error;
    private HashSet<string> _expandedChecks = new();
    private bool _showOverallDetails = false;

    // Sync locks state
    private List<CleverSyncSOS.Core.Database.SessionDb.Entities.SyncLock>? _syncLocks;
    private bool _loadingLocks = false;
    private string? _lockError;
    private bool _showClearConfirmation = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadHealth();
        await LoadSyncLocks();
    }

    private async Task LoadHealth()
    {
        _loading = true;
        _error = null;

        try
        {
            _healthReport = await HealthCheckService.CheckHealthAsync();
        }
        catch (Exception ex)
        {
            _error = $"Failed to load health status: {ex.Message}";
            Logger.LogError(ex, "Failed to load health status");
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task RefreshHealth()
    {
        await LoadHealth();
    }

    private void ToggleDetails(string checkName)
    {
        if (_expandedChecks.Contains(checkName))
        {
            _expandedChecks.Remove(checkName);
        }
        else
        {
            _expandedChecks.Add(checkName);
        }
    }

    private void ToggleOverallDetails()
    {
        _showOverallDetails = !_showOverallDetails;
    }

    private string GetStatusColor(HealthStatus status)
    {
        return status switch
        {
            HealthStatus.Healthy => "success",
            HealthStatus.Degraded => "warning",
            HealthStatus.Unhealthy => "danger",
            _ => "secondary"
        };
    }

    private string FormatDataValue(object value)
    {
        if (value == null)
            return "null";

        if (value is DateTime dt)
            return dt.ToString("yyyy-MM-dd HH:mm:ss UTC");

        if (value is bool b)
            return b ? "✓ Yes" : "✗ No";

        if (value is double d)
            return d.ToString("F2");

        return value.ToString() ?? string.Empty;
    }

    private async Task LoadSyncLocks()
    {
        _loadingLocks = true;
        _lockError = null;

        try
        {
            await using var dbContext = await DbContextFactory.CreateDbContextAsync();
            _syncLocks = await dbContext.SyncLocks.ToListAsync();
        }
        catch (Exception ex)
        {
            _lockError = $"Failed to load sync locks: {ex.Message}";
            Logger.LogError(ex, "Failed to load sync locks");
        }
        finally
        {
            _loadingLocks = false;
        }
    }

    private void ShowClearLocksConfirmation()
    {
        _showClearConfirmation = true;
    }

    private async Task ClearAllLocks()
    {
        _showClearConfirmation = false;

        try
        {
            await using var dbContext = await DbContextFactory.CreateDbContextAsync();
            var lockCount = await dbContext.SyncLocks.CountAsync();

            if (lockCount > 0)
            {
                await dbContext.Database.ExecuteSqlRawAsync("DELETE FROM SyncLock");
                Logger.LogWarning("Cleared {Count} sync locks via Health page", lockCount);
            }

            await LoadSyncLocks();
        }
        catch (Exception ex)
        {
            _lockError = $"Failed to clear locks: {ex.Message}";
            Logger.LogError(ex, "Failed to clear sync locks");
        }
    }

    private async Task ClearSingleLock(string scope)
    {
        try
        {
            await using var dbContext = await DbContextFactory.CreateDbContextAsync();
            var lockEntry = await dbContext.SyncLocks.FindAsync(scope);

            if (lockEntry != null)
            {
                dbContext.SyncLocks.Remove(lockEntry);
                await dbContext.SaveChangesAsync();
                Logger.LogWarning("Cleared sync lock for scope '{Scope}' via Health page", scope);
            }

            await LoadSyncLocks();
        }
        catch (Exception ex)
        {
            _lockError = $"Failed to clear lock for {scope}: {ex.Message}";
            Logger.LogError(ex, "Failed to clear sync lock for scope {Scope}", scope);
        }
    }

    private string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalDays >= 1)
            return $"{(int)duration.TotalDays}d {duration.Hours}h";
        if (duration.TotalHours >= 1)
            return $"{(int)duration.TotalHours}h {duration.Minutes}m";
        if (duration.TotalMinutes >= 1)
            return $"{(int)duration.TotalMinutes}m {duration.Seconds}s";
        return $"{duration.Seconds}s";
    }
}
