@using CleverSyncSOS.AdminPortal.Services
@inject ActiveSyncTracker ActiveSyncTracker
@implements IDisposable

<style>
    @@keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    .spin-animation {
        animation: spin 1s linear infinite;
        display: inline-block;
    }
</style>

<div class="nav-scrollable">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized Context="outerContext">
                @* Active Sync Indicator *@
                @if (_activeSyncCount > 0)
                {
                    <div class="nav-item px-3 mb-2">
                        <a class="nav-link bg-warning text-dark rounded" href="manual-sync">
                            <span class="oi oi-loop-circular spin-animation" aria-hidden="true"></span>
                            <span class="ms-1">@_activeSyncCount Sync@(_activeSyncCount > 1 ? "s" : "") Running</span>
                        </a>
                    </div>
                }

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Dashboard
                    </NavLink>
                </div>
                <AuthorizeView Policy="SchoolAdmin">
                    <Authorized>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="sync">
                                <span class="oi oi-pie-chart" aria-hidden="true"></span> Sync Dashboard
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="sync-history">
                                <span class="oi oi-list" aria-hidden="true"></span> Sync History
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>
                <AuthorizeView Policy="DistrictAdmin">
                    <Authorized>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="districts">
                                <span class="oi oi-globe" aria-hidden="true"></span> Districts
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>
                <AuthorizeView Policy="SchoolAdmin">
                    <Authorized>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="schools">
                                <span class="oi oi-book" aria-hidden="true"></span> Schools
                            </NavLink>
                        </div>
                        @* Courses are not synced - they are district-level in Clever and would bring irrelevant data from other schools
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="courses">
                                <span class="oi oi-layers" aria-hidden="true"></span> Courses
                            </NavLink>
                        </div>
                        *@
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="sections">
                                <span class="oi oi-grid-four-up" aria-hidden="true"></span> Sections
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>
                <AuthorizeView Policy="SuperAdmin">
                    <Authorized>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="users">
                                <span class="oi oi-people" aria-hidden="true"></span> Users
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="audit">
                                <span class="oi oi-shield" aria-hidden="true"></span> Audit Logs
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="health">
                                <span class="oi oi-heart" aria-hidden="true"></span> System Health
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="events-check">
                                <span class="oi oi-cloud-download" aria-hidden="true"></span> Events Check
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>
                <div class="nav-item px-3 mt-auto">
                    <a class="nav-link" href="/logout">
                        <span class="oi oi-account-logout" aria-hidden="true"></span> Sign Out
                    </a>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Sign In
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private int _activeSyncCount;

    protected override void OnInitialized()
    {
        _activeSyncCount = ActiveSyncTracker.ActiveSyncCount;
        ActiveSyncTracker.OnActiveSyncsChanged += OnActiveSyncsChanged;
    }

    private void OnActiveSyncsChanged()
    {
        _activeSyncCount = ActiveSyncTracker.ActiveSyncCount;
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        ActiveSyncTracker.OnActiveSyncsChanged -= OnActiveSyncsChanged;
    }
}
